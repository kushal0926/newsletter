{
  "name": "server",
  "author": "moks",
  "version": "0.0.0",
  "private": true,
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "tsc": "npx tsc",
    "lint": "npx eslint .",
    "build": "npm-run-all clean tsc",
    "dev:start": "npm-run-all build start",
    "local": "PORT=${PORT:-8081} nodemon --watch src -e ts,ejs --exec npm run dev:start",
    "start": "node dist/index.js",
    "test:unit": "DOTENV_CONFIG_PATH=./.env.test jest -i --verbose test/unit",
    "test:integration": "DOTENV_CONFIG_PATH=./.env.test jest -i --detectOpenHandles --forceExit test/integration",
    "test": "jest"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^17.3.1",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "http-status": "^2.1.0",
    "jade": "~1.11.0",
    "morgan": "~1.9.1",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript-eslint": "^8.55.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/http-errors": "^2.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.3",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "prettier": "3.8.1",
    "rimraf": "^6.1.2",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  }
}
